<h1> Welcome <%= @user.username %></h1>

<div class="ui cards">
  <div class="card">
    <div class="content">
      <div class="header"><p>Name: <%= "#{@user.first_name} #{@user.last_name}" %></p></div>
      <div class="meta"><p>Username: <%=@user.username %></p></div>
      <div class="description">
        <p>Email: <%= @user.email %></p>
      </div>
      <div class="description">
        <% @user.teams.each do |team| %> 
            <p>Teams: <%= link_to team.name, team %></p>
        <% end %>
      </div>
      <div class="description">
        <% @user.teams.each do |team| %> 
            <p>Tournaments: <%= link_to team.tournament.name, tournament_path(team.tournament.id) %> </p>
        <% end %>
      </div>

      <div class= 'modify-user'>
        <%= button_to 'Edit', edit_user_path(@current_user), id:'user-edit-btn', method: :get   %>
        <!-- <%= button_to 'Delete', user_path, id:'user-delete-btn', method: :delete  %> -->
        <%= button_to 'Create Team', new_team_path, id:'user-delete-btn', method: :get %>
      </div>
    </div>
  </div>
</div>

