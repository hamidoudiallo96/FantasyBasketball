<!DOCTYPE html>
<html>
  <head>
    <title>BigBallers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'teams', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'tournaments', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'sessions', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <!-- NavBar -->
      <div class = 'navbar'>
        <h1 id='Logo'>WeBigBallers</h1>
      <div class="ui secondary pointing menu">

        <%= link_to 'Home', root_path, class: 'item' %>

        <%= link_to 'Teams', teams_path, class: 'item' %>

        <%= link_to 'Tournaments', tournaments_path, class: 'item' %>

        <%= link_to 'Players', players_path, class: 'item' %>
        <%= link_to "Signup", signup_path, class: "item" %>
        <%= link_to "Login", login_path, class: "item" %>
      </div>
      
      </div>


      <div class='home-view'>
        <% if @current_user %>
          Welcome, <%= @current_user.username %>!
          <h1>WeBigBallers</h1>
        <% else %>
          Sorry, You are not welcome here!
        <% end %>
      </div>
      <%= yield %>
    
  </body>
</html>
